{
  "debug_manager": {
    "debug_enabled": true,
    "log_level": "debug",
    "max_events": 10000,
    "max_sessions": 100,
    "profiling_enabled": true,
    "memory_tracking": true,
    "log_directory": "logs/debug"
  },
  "logging": {
    "version": 1,
    "disable_existing_loggers": false,
    "formatters": {
      "detailed": {
        "format": "%(asctime)s - %(name)s - %(levelname)s - %(funcName)s:%(lineno)d - %(message)s"
      },
      "simple": {
        "format": "%(levelname)s - %(message)s"
      },
      "json": {
        "format": "%(asctime)s %(name)s %(levelname)s %(message)s",
        "class": "pythonjsonlogger.jsonlogger.JsonFormatter"
      }
    },
    "handlers": {
      "console": {
        "class": "logging.StreamHandler",
        "level": "INFO",
        "formatter": "simple",
        "stream": "ext://sys.stdout"
      },
      "debug_file": {
        "class": "logging.handlers.RotatingFileHandler",
        "level": "DEBUG",
        "formatter": "detailed",
        "filename": "logs/debug/debug.log",
        "maxBytes": 10485760,
        "backupCount": 5
      },
      "error_file": {
        "class": "logging.handlers.RotatingFileHandler",
        "level": "ERROR",
        "formatter": "detailed",
        "filename": "logs/debug/errors.log",
        "maxBytes": 10485760,
        "backupCount": 5
      },
      "performance_file": {
        "class": "logging.handlers.RotatingFileHandler",
        "level": "INFO",
        "formatter": "json",
        "filename": "logs/debug/performance.log",
        "maxBytes": 10485760,
        "backupCount": 3
      }
    },
    "loggers": {
      "plexichat": {
        "level": "DEBUG",
        "handlers": ["console", "debug_file", "error_file"],
        "propagate": false
      },
      "plexichat.infrastructure.debugging": {
        "level": "DEBUG",
        "handlers": ["console", "debug_file"],
        "propagate": false
      },
      "plexichat.infrastructure.modules.plugin_manager": {
        "level": "DEBUG",
        "handlers": ["console", "debug_file", "performance_file"],
        "propagate": false
      },
      "plugins": {
        "level": "DEBUG",
        "handlers": ["console", "debug_file"],
        "propagate": false
      }
    },
    "root": {
      "level": "WARNING",
      "handlers": ["console"]
    }
  },
  "profiling": {
    "cpu_profiling": {
      "enabled": true,
      "sample_rate": 0.01,
      "max_stack_depth": 50
    },
    "memory_profiling": {
      "enabled": true,
      "snapshot_interval": 300,
      "track_allocations": true
    },
    "io_profiling": {
      "enabled": false,
      "track_file_operations": true,
      "track_network_operations": true
    }
  },
  "monitoring": {
    "performance_thresholds": {
      "slow_function_threshold": 1.0,
      "memory_usage_threshold": 500,
      "error_rate_threshold": 0.05
    },
    "alerts": {
      "enabled": true,
      "channels": ["console", "file"],
      "email_notifications": false,
      "webhook_notifications": false
    },
    "metrics_collection": {
      "enabled": true,
      "collection_interval": 60,
      "retention_days": 30
    }
  },
  "plugin_debugging": {
    "auto_debug_sessions": true,
    "profile_plugin_operations": true,
    "track_plugin_performance": true,
    "debug_plugin_tests": true,
    "memory_snapshots": {
      "enabled": true,
      "auto_snapshot_on_errors": true,
      "snapshot_on_plugin_load": true,
      "snapshot_on_plugin_unload": true
    }
  },
  "webui_debugging": {
    "enabled": true,
    "real_time_updates": true,
    "update_interval": 10,
    "max_events_display": 100,
    "enable_search": true,
    "enable_filtering": true,
    "enable_export": true
  },
  "cli_debugging": {
    "enabled": true,
    "default_event_limit": 50,
    "colored_output": true,
    "auto_refresh": false,
    "export_formats": ["json", "csv", "txt"]
  },
  "error_handling": {
    "capture_stack_traces": true,
    "capture_local_variables": false,
    "max_traceback_depth": 20,
    "error_grouping": true,
    "error_deduplication": true
  },
  "performance_optimization": {
    "cache_debug_events": true,
    "compress_old_events": true,
    "async_logging": true,
    "batch_processing": true,
    "lazy_evaluation": true
  },
  "security": {
    "sanitize_sensitive_data": true,
    "sensitive_fields": [
      "password",
      "token",
      "secret",
      "key",
      "api_key",
      "auth_token",
      "session_id",
      "user_id"
    ],
    "redaction_text": "[REDACTED]",
    "encrypt_debug_files": false
  },
  "integration": {
    "external_monitoring": {
      "enabled": false,
      "prometheus_metrics": false,
      "grafana_dashboard": false,
      "datadog_integration": false
    },
    "third_party_tools": {
      "sentry_integration": false,
      "new_relic_integration": false,
      "elastic_apm": false
    }
  },
  "development": {
    "debug_mode": true,
    "verbose_logging": true,
    "development_shortcuts": true,
    "auto_reload_on_changes": true,
    "test_mode_optimizations": true
  },
  "production": {
    "debug_mode": false,
    "verbose_logging": false,
    "performance_mode": true,
    "minimal_logging": true,
    "security_hardening": true,
    "log_rotation": {
      "enabled": true,
      "max_file_size": "100MB",
      "max_files": 10,
      "compression": true
    }
  }
}
